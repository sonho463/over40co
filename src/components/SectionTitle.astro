---
const { text,lead } = Astro.props;

---

<h2>
  {text}
</h2>
<p>
  {lead}
</p>

<style lang="scss">
  @use "../styles/variables" as *;
  h2 {
    margin-top: 12vw;
    font-size: 5vw;
    position: relative;
    width: fit-content;
    margin-right: auto;
    margin-left: auto;
    margin-bottom: 8vw;
    &::before {
      content: "";
      display: block;
      width: 100%;
      height: 40%;
      background-color: $accent-pale;
      position: absolute;
      bottom: -10%;
      right: -10%;
    }
  }

  p{
    font-size: 2vw;
    width: 80%;
    margin-right: auto;
    margin-left: auto;
    margin-bottom: 6vw;
    line-height: 1.4;
  }
</style>
