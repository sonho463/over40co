---
const { text } = Astro.props;

---

<h2>
  {text}
</h2>

<style lang="scss">
  @use "../styles/variables" as *;
  h2 {
    margin-top: 12vw;
    font-size: 5vw;
    position: relative;
    width: fit-content;
    margin-right: auto;
    margin-left: auto;
    margin-bottom: 8vw;
    &::before {
      content: "";
      display: block;
      width: 100%;
      height: 50%;
      background-color: $accent-pale;
      position: absolute;
      bottom: -10%;
      right: -10%;
    }
  }
</style>
